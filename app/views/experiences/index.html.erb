<p id="notice"><%= notice %></p>

<h1>Listing <%= @item.name %> Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Bought At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.price %></td>
        <td><%= experience.bought_at %></td>
        <td><%= link_to 'Show', [@item, experience] %></td>
        <td><%= link_to 'Edit', edit_item_experience_path(@item, experience) %></td>
        <td><%= link_to 'Destroy', [@item, experience], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', items_path %>
<%= link_to 'New Experience', new_item_experience_path %>
